- form_for(@campaign) do |f|
  = f.error_messages
  %p
    = f.label :title
    %br
    = f.text_field :title
  %p
    = f.label :start_date
    %br
    = f.text_field :start_date
  %p
    = f.label :end_date
    %br
    = f.text_field :end_date
  - if request.xhr?
    %p
      %a#campaign_submit{:onclick => "submit_campaign('#{submit_text}', #{@campaign.id}); return false;"}
        = submit_text
  - else
    %p
      = f.submit submit_text
:javascript
  $(document).ready(function(){
  $.each($('input'), function(){
  if(/date/.test($(this).attr('id'))){
  $(this).datepicker();
  }
  });
  });