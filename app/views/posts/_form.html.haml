- content_for(:javascripts) do
  = javascript_include_tag 'markitup/jquery.markitup'
  = javascript_include_tag 'markitup/sets/markdown/set'
  = javascript_include_tag 'form_utils'
  = javascript_include_tag 'post'
- content_for(:stylesheets) do
  = stylesheet_link_tag 'markitup/skins/markitup/style'
  = stylesheet_link_tag 'markitup/sets/markdown/style'
  = stylesheet_link_tag 'post'
  = stylesheet_link_tag 'form'
  = stylesheet_link_tag 'showpost'
.postwrap
  - form_for([@campaign, @post]) do |f|
    = f.error_messages
    .formlabel
      = f.label :title
    .formfieldwrapper
      = f.text_field :title, :class => 'formfield'
    .bodyedit
      = f.text_area :body
    = render :partial => 'shared/go_live', :locals => {:object => @post, :f => f}
    .formlabel
      = f.label :tags
    = f.text_field :tags, :class => 'formfield tags'
    = f.check_box :private
    = f.label :private, "Private?"
    %p
      = f.submit submit_text, :class => 'submit'