<h1>Login</h1>
 
<% form_for @user_session, :url => user_session_path do |f| %>
  <%= f.error_messages %>
  <%= f.label :login %><br />
  <%= f.text_field :login %><br />
  <br />
  <%= f.label :password %><br />
  <%= f.password_field :password %><br />
  <br />
  <%= f.check_box :remember_me %><%= f.label :remember_me %><br />
  <br />
  <h2>Or use OpenID</h2>
  <%= f.label :openid_identifier, "OpenID URL" %><br />
  <%= f.text_field :openid_identifier %><br />
  <br />
  <%= f.submit "Login" %>
<% end %>

<%= link_to 'Need to register?', new_user_path %><br />
<%= link_to 'Forgot your password?', new_password_reset_path %>