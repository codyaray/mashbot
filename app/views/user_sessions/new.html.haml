- content_for(:stylesheets) do
  = stylesheet_link_tag 'login'
- content_for(:javascripts) do
  = javascript_include_tag 'login'

%h1
  Login
#loginform
  - form_for @user_session, :url => user_session_path do |f|
    #formerrors
      = f.error_messages
    #regularlogin.loginwrapper
      .togglelogin
        %a{:href => "#", :onclick => 'toggle_login(true)'}
          OpenId login >
      .formlabel
        = f.label :login, 'Username'
      .formfieldwrapper
        = f.text_field :login, :class => 'formfield'
      .fieldnote
        Example: BluePojo
      .formlabel
        = f.label :password
      .formfieldwrapper
        = f.password_field :password, :class => 'formfield'
    #openid.loginwrapper
      .togglelogin
        %a{:href => "#", :onclick => 'toggle_login(false)'}
          Regular login >
      .openidwrapper
        .formlabel
          = f.label :openid_identifier, "OpenID URL"
        .formfieldwrapper
          = f.text_field :openid_identifier, :class => 'formfield'
        .fieldnote
          Example: codyaray.myopenid.com
        
    .formcheckbox.rememberme
      = f.check_box :remember_me
    .formcheckboxlabel.rememberme
      = f.label :remember_me, 'remember me'
    = f.submit "login", :class => 'formfield submit'
  .quicklinks
    = link_to 'register', new_user_path
    |
    = link_to 'forget your password?', new_password_reset_path
